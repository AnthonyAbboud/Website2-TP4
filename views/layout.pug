doctype html
html(lang='fr')
  head
    meta(charset='UTF-8')
    title= 'OnlineShop - ' + title
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='./assets/css/style.css')
  body
    header
      .header-container
        .logo
          a(href='./index.html')
            img(alt='logo', src='./assets/img/logo.svg', title='title')
        nav
          ul
            li(class= title=='Accueil' ? 'active' : '')
              a(href='./index.html') Accueil
            li(class= title=='Produits' ? 'active' : '')
              a(href='./products.html') Produits
            li(class= title=='Contact' ? 'active' : '')
              a(href='./contact.html') Contact
            li
              a.shopping-cart(href='./shopping-cart.html', title='Panier')
                span.fa-stack.fa-lg
                  i.fa.fa-circle.fa-stack-2x.fa-inverse
                  i.fa.fa-shopping-cart.fa-stack-1x
                if cart.count > 0
                  span.count.visible #{cart.count}
                else
                  span.count #{cart.count}
    block content
    footer
